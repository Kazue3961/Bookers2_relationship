<div class="col-xs-9">
<h2>Follower Users</h2>
    <% if @users.count > 0 %>
    <table class="table">
    	<thead>
    		<tr>
    			<th>image</th>
    			<th>name</th>
    			<th></th>
    		</tr>
    	</thead>
    	<tbody>
    		<% @users.each do |user| %>
    		<tr>
    			<td><%= attachment_image_tag user,:profile_image, :fill, 50, 50, format:'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
    			<td><%= user.name %></td>

    			<!-- フォロー関係追加 -->
    			<td>フォロー数：<%= user.follower.count %></td>
    			<td>フォロワー数：<%= user.followed.count %></td>
				<!-- 追加ここまで -->

				<td><%= link_to "Show", user_path(user) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<% else %>
		<p>ユーザーはいません</p>
	<% end %>
</div>
